year <- sub('-.*', '', meta$Date)
note <- sprintf('R package version %s', meta$Version)

bibentry(bibtype = 'Manual',
         title = 'calcSolar: Solar position and radiation components',
         author = c(person('Bijan', 'Seyednasrollah')),
         year = year,
         note = note,
         url = 'http://doi.org/10.5281/zenodo.1006384')
